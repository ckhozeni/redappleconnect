---
import "../styles/global.css";
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Red Apple Connect</title>

  <!-- Netlify Identity (site-wide, needed for password reset link) -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>


  <script>
    const saved = localStorage.getItem("theme");
    if (saved) document.documentElement.dataset.theme = saved;
  </script>
</head>
<script>
  // Theme toggle (keep yours if you want)
  document.getElementById("toggle").onclick = () => {
    const t = document.documentElement.dataset.theme === "dark" ? "light" : "dark";
    document.documentElement.dataset.theme = t;
    localStorage.setItem("theme", t);
  };

  // ✅ Netlify Identity: force init + open recovery if token is present
  (function () {
    function openRecoveryIfToken() {
      if (window.location.hash && window.location.hash.includes("recovery_token=")) {
        window.netlifyIdentity.open("recovery");
      }
    }

    function boot() {
      if (!window.netlifyIdentity) return;

      // Force init (important)
      try { window.netlifyIdentity.init(); } catch (e) {}

      openRecoveryIfToken();

      // Also handle cases where hash appears after load
      window.addEventListener("hashchange", openRecoveryIfToken);
    }

    // If widget already loaded
    if (window.netlifyIdentity) boot();
    // If widget loads after this script
    else window.addEventListener("load", boot);
  })();
</script>

<body>
  <header class="nav">
    <div class="container nav-inner">
      <a href="/" class="logo">Red Apple Connect</a>

      <nav>
        <a href="/">Home</a>
        <a href="/blog/">Blog</a>
      </nav>

      <button id="toggle" type="button">Theme</button>
    </div>
  </header>

  <main class="container">
    <slot />
  </main>

  <footer class="footer">
    © {new Date().getFullYear()} Red Apple Connect
  </footer>

  <script>
    // Theme toggle
    document.getElementById("toggle").onclick = () => {
      const t = document.documentElement.dataset.theme === "dark" ? "light" : "dark";
      document.documentElement.dataset.theme = t;
      localStorage.setItem("theme", t);
    };

    // Netlify Identity password recovery: open modal when reset link redirects back
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", () => {
        if (window.location.hash && window.location.hash.includes("recovery_token")) {
          window.netlifyIdentity.open("recovery");
        }
      });
    }
  </script>
</body>
</html>
