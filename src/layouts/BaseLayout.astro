---
import "../styles/global.css";
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Red Apple Connect</title>

  <!-- Netlify Identity (site-wide, needed for password reset link) -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  <script>
    const saved = localStorage.getItem("theme");
    if (saved) document.documentElement.dataset.theme = saved;
  </script>
</head>

<body>
  <header class="nav">
    <div class="container nav-inner">
      <a href="/" class="logo">Red Apple Connect</a>

      <nav>
        <a href="/">Home</a>
        <a href="/blog/">Blog</a>
      </nav>

      <button id="toggle" type="button">Theme</button>
    </div>
  </header>

  <main class="container">
    <slot />
  </main>

  <footer class="footer">
    Â© {new Date().getFullYear()} Red Apple Connect
  </footer>

  <script>
    // Theme toggle
    document.getElementById("toggle").onclick = () => {
      const t = document.documentElement.dataset.theme === "dark" ? "light" : "dark";
      document.documentElement.dataset.theme = t;
      localStorage.setItem("theme", t);
    };

    // Netlify Identity password recovery: open modal when reset link redirects back
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", () => {
        if (window.location.hash && window.location.hash.includes("recovery_token")) {
          window.netlifyIdentity.open("recovery");
        }
      });
    }
  </script>
</body>
</html>
